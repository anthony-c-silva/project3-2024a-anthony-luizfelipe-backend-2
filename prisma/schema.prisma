generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Abrigo {
  id        Int     @id @default(autoincrement())
  nome      String  @unique
  endereco  String?
  telefone  String?
  usuarios  Usuario[]
  itens     Item[]
}

model Item {
  id          Int     @id @default(autoincrement())
  nome        String  @unique
  descricao   String?
  quantidade  Int
  categoria   String
  abrigoId    Int
  abrigo      Abrigo  @relation(fields: [abrigoId], references: [id])
  doacoes     Doacao[]
}

model Usuario {
  id          Int       @id @default(autoincrement())
  nomeUsuario String
  senha       String
  email       String    @unique
  abrigoId    Int
  abrigo      Abrigo    @relation(fields: [abrigoId], references: [id])
  role        Role      @default(USER)
}

model Doacao {
  id         Int       @id @default(autoincrement())
  quantidade Int
  data       DateTime
  itemId     Int
  item       Item      @relation(fields: [itemId], references: [id])
}

enum Role {
  ADMIN
  USER
}
